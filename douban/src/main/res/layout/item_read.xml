<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/lightgrey"
    android:layout_height="wrap_content"
    android:paddingLeft="20px"
    android:paddingRight="20px"
    android:paddingBottom="10px"
    android:paddingTop="10px"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:padding="10px"
        app:cardCornerRadius="5px"
        android:elevation="3px"
        app:contentPadding="20px"
        app:cardMaxElevation="6px"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="192px"
                android:layout_height="310px"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_read"/>
            <TextView
                android:id="@+id/tv_title"
                style="@style/TitleStyle"
                android:layout_marginLeft="80px"
                android:layout_toRightOf="@+id/iv_image"
                android:text="笑傲江湖"
            />

            <TextView
                android:id="@+id/tv_author"
                style="@style/ContentStyle"
                android:layout_below="@+id/tv_title"
                android:layout_marginLeft="80px"
                android:layout_marginTop="30px"
                android:layout_toRightOf="@+id/iv_image"
                android:text="作者:金庸"
            />
            <TextView
                android:id="@+id/tv_publisher"
                style="@style/ContentStyle"
                android:layout_below="@+id/tv_author"
                android:layout_marginLeft="80px"
                android:layout_marginTop="30px"
                android:layout_toRightOf="@+id/iv_image"
                android:text="出版社:商务印书馆"
            />
            <TextView
                android:id="@+id/tv_time"
                style="@style/ContentStyle"
                android:layout_below="@+id/tv_publisher"
                android:layout_marginLeft="80px"
                android:layout_marginTop="30px"
                android:layout_toRightOf="@+id/iv_image"
                android:text="出版时间:1996"
            />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>